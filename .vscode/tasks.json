{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "ehco project path",
			"command": "echo /workspaces/${project}",
		},
		{
			"type": "shell",
			"label": "docker-build",
			"command": "docker",
			"args": [
				"build",
				"-t",
				"userstorymapper:latest",
				"-f",
				"${workspaceFolder}/Dockerfile",
				"${workspaceFolder}"
			]
		},
		{
			"type": "shell",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-p",
				"8000:8000",
				"userstorymapper:latest"
			]
		},
		{
			"type": "shell",
			"label": "docker-run: app",
			"dependsOn": [
				"docker-build"
			],
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-v",
				"${workspaceFolder}:/app",
				"-w",
				"/app",
				"-p",
				"8000:8000",
				"userstorymapper:latest"
			]
		}
	]
}